<body>


    <header class="masthead" style="background-image: url('<%=blog.image%>')">
        <div class="overlay"></div>
        <div style="color: rgb(216, 209, 209)" class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="post-heading">
                        <h1>
                            <%= blog.title %>
                        </h1>
                        <span class="meta">Posted by
              <a href="#"><%= blog.author.fullname  %></a>

              on <%= blog.date.toDateString()  %></span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div style="padding: 10px; margin:auto" class="col-md-10">
                    <hr>
                    <%=blog.content  %>
                </div>
            </div>
        </div>
    </article>

    <hr>
    <div class="container">

        <textarea type="text" class="form-control" name="comment" placeholder="enter comment"></textarea>
        <br>
        <input type="submit" name="commentsub" class="btn btn-info" value="submit">
        <br>

        <br>

        <div class="jumbotron container">
            <h5>Comments</h5>
            <hr>
            <i>No comments yet</i>
        </div>

    </div>
</body>