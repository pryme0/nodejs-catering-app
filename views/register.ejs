<body>
    <div class="container login-container">
        <div class="row">
            <div class="col-md-6 login-form-2">
                <div id="alert-promt" class="alert alert-success">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong id="alerttext">Fill the form below to register</strong>
                </div>
                <h3></h3>
                <form name="regform" role="form">
                    <div class="form-group">
                        <label for="fullname">Fullname</label>
                        <input type="text" name="fullname" class="form-control" id="fullname" placeholder="enter fullname">
                    </div>
                    <div class="form-group">
                        <label for="email">Email address:</label>
                        <input type="email" class="form-control" id="email" name="email">
                    </div>
                    <div class="form-group">
                        <label for="address">Address:</label>
                        <input type="text" class="form-control" id="address">
                        <input style="display: none;" type="text" value="false" class="form-control" id="isAdmin" name="isAdmin">
            
                    </div>
                    <div>
                        <label for="password">Password:</label>
                        <input type="password" class="form-control" id="password0" name="password">
                    </div>
                    <div class="form-group">
                        <label for="password1">Confirm password:</label>
                        <input type="password" class="form-control" id="password1" name="password1">
                        <p id="passcheck"></p>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" id="register">
                    </div>
                </form>
                <a class="text-white" href="/user/login">Already have an account?</a>

            </div>
        </div>
    </div>
</body>